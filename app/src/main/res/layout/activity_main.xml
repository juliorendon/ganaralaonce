<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/green"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/txtTitle"
        android:text="@string/ganar_once_text"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/abc_text_size_display_2_material"
        android:gravity="center_horizontal"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textColor="@color/yellow"
        android:fontFamily="Verdana"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/digit1"
            android:text="@string/initial_value"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/digit2"
            android:text="@string/initial_value"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/digit3"
            android:text="@string/initial_value"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/digit4"
            android:text="@string/initial_value"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/digit5"
            android:text="@string/initial_value"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button android:text="@string/play_text"
        android:id="@+id/btnWin"
        android:background="@drawable/green_button" style="@style/ButtonText"></Button>

</LinearLayout>
